<Window x:Class="Tiler.EditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Closing="Window_Closing"
        ResizeMode="NoResize"
        Title="Edit windows" Width="960" Height="720" WindowStartupLocation="CenterScreen">
  <Grid>
  <Grid.RowDefinitions>
  <RowDefinition Height="20"/>
  <RowDefinition Height="*"/>
  <RowDefinition Height="20"/>
  <RowDefinition Height="32"/>
  <RowDefinition Height="20"/>
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
  <ColumnDefinition Width="20"/>
  <ColumnDefinition Width="*"/>
  <ColumnDefinition Width="20"/>
  </Grid.ColumnDefinitions>
    <DataGrid Grid.Row="1" Grid.Column="1"
              ItemsSource="{Binding Windows}" AutoGenerateColumns="False" CanUserAddRows="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Process name"
                            Binding="{Binding ProcessName.Value}"
                            Width="150"
                            IsReadOnly="True" />
        <DataGridTextColumn Header="Title" Binding="{Binding Title.Value}" Width="400" />
        <DataGridTextColumn Header="X" Binding="{Binding X.Value}" Width="80" />
        <DataGridTextColumn Header="Y" Binding="{Binding Y.Value}" Width="80" />
        <DataGridTextColumn Header="Width" Binding="{Binding Width.Value}" Width="80" />
        <DataGridTextColumn Header="Height" Binding="{Binding Height.Value}" Width="80" />
      </DataGrid.Columns>
    </DataGrid>
    <Button Grid.Row="3" Grid.Column="1" Content="Save" Width="100" HorizontalAlignment="Right" Click="Save_Click"/>
  </Grid>
</Window>
